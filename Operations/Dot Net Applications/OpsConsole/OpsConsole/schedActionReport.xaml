<UserControl x:Class="OpsConsole.schedActionReport"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="162" d:DesignWidth="1000">
    <Grid>
        <Border x:Name="border1" Background="#FF689391" Margin="10,10,10,0" CornerRadius="20" >
            <Grid >
                <ComboBox x:Name="cbFilterOn1" HorizontalAlignment="Left" Margin="43,48,0,0" VerticalAlignment="Top" Width="177" Height="23" FontWeight="Bold">
                </ComboBox>
                <TextBlock HorizontalAlignment="Left" Margin="45,0,0,0" TextWrapping="Wrap" Text="run a Report" VerticalAlignment="Top" Width="210" Foreground="White" Height="37" FontSize="18" FontWeight="Bold"/>
                <Image x:Name="imgExpand" Source="images/expand2.png" Margin="11,6,0,0" Stretch="None" HorizontalAlignment="Left" VerticalAlignment="Top" MouseUp="imgExpand_MouseUp"></Image>
                <Image x:Name="imgCollapse" Source="images/collapse2.png" Margin="11,6,0,0" Stretch="None" HorizontalAlignment="Left" VerticalAlignment="Top" MouseUp="imgCollapse_MouseUp"/>
            </Grid>
        </Border>

    </Grid>
</UserControl>
