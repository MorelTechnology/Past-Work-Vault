                        <Label x:Name="lblButtonShowFields" Content="Show" HorizontalContentAlignment="Center" Margin="0,-3,0,0" FontWeight="Bold" Foreground="DarkGreen" />
                        <Label Content="Fields" Margin="0,-13,0,0" HorizontalContentAlignment="Center" FontWeight="Normal" FontSize="10" Foreground="DarkGreen" />
                    </StackPanel>
                </Button>
            </Grid>
            <Grid Opacity="1" x:Name="gridInnerControl" >
                <TextBlock HorizontalAlignment="Left" Margin="14,38,0,0" TextWrapping="Wrap" Text="Name" VerticalAlignment="Top" Width="128" Foreground="White" FontSize="16"/>
                <TextBox x:Name="txtName" HorizontalAlignment="Left" Height="24" Margin="14,59,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="411" FontSize="14" FontWeight="Bold"/>
                <TextBlock HorizontalAlignment="Left" Margin="14,90,0,0" TextWrapping="Wrap" Text="Audience" VerticalAlignment="Top" Width="128" Foreground="White" FontSize="16"/>
                <TextBlock HorizontalAlignment="Left" Margin="14,166,0,0" TextWrapping="Wrap" Text="Service Desk Category" VerticalAlignment="Top" Width="169" Foreground="White" FontSize="16"/>
