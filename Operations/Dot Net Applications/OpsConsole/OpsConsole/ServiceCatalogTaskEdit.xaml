                    <ScrollViewer>
                        <TextBlock x:Name="tbNote" TextWrapping="Wrap" Text=""  FontSize="11"  />
                    </ScrollViewer>
                </Grid>
                <DataGrid x:Name="dgCat" Margin="14,187,0,0" HorizontalGridLinesBrush="#FFF0F0F0" VerticalGridLinesBrush="#FFF0F0F0" SelectionMode="Single" CanUserSortColumns="False" ScrollViewer.CanContentScroll="True" ScrollViewer.HorizontalScrollBarVisibility="Visible" AutoGenerateColumns="False" Height="113" Background="White" VerticalAlignment="Top" CanUserResizeColumns="False" CanUserReorderColumns="False" HeadersVisibility="None" RowDetailsVisibilityMode="Visible" CanUserResizeRows="False" IsReadOnly="True" Width="205" SelectionChanged="dgCat_SelectionChanged" HorizontalAlignment="Left" >
                    <DataGrid.Resources>
                        <SolidColorBrush x:Key="{x:Static SystemColors.InactiveSelectionHighlightBrushKey}" Color="DarkGray"/>
                    </DataGrid.Resources>
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Name" Width="185" Binding="{Binding Name}"/>
                    </DataGrid.Columns>
                </DataGrid>
                <TextBlock HorizontalAlignment="Left" Margin="14,313,0,0" TextWrapping="Wrap" Text="Description" VerticalAlignment="Top" Width="128" Foreground="White" FontSize="16"/>
                <TextBox x:Name="txtDescription" HorizontalAlignment="Left" Height="120" Margin="14,338,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="628" AcceptsReturn="True"/>
                <Button x:Name="btnBiz" HorizontalAlignment="Left" Height="41" Margin="14,111,0,0" VerticalAlignment="Top" Width="152" FontWeight="Bold" Click="btnBiz_Click" >
                    <StackPanel Orientation="Horizontal">
                        <Rectangle x:Name="rectBiz" Fill="#FF3464B8" Width="7" Height="24" Opacity=".2" Stroke="#FF837D7D" />
                        <Label Content="For Business Users" FontSize="14" Foreground="#FF303030" />
                    </StackPanel>
                </Button>
                <TextBlock HorizontalAlignment="Left" Margin="226,166,0,0" TextWrapping="Wrap" Text="Service Desk SubCategory" VerticalAlignment="Top" Width="205" Foreground="White" FontSize="16"/>
                <TextBlock HorizontalAlignment="Left" Margin="437,166,0,0" TextWrapping="Wrap" Text="Service Desk Item" VerticalAlignment="Top" Width="205" Foreground="White" FontSize="16"/>
                <DataGrid x:Name="dgSubCat" Margin="226,187,0,0" HorizontalGridLinesBrush="#FFF0F0F0" VerticalGridLinesBrush="#FFF0F0F0" SelectionMode="Single" CanUserSortColumns="False" ScrollViewer.CanContentScroll="True" ScrollViewer.HorizontalScrollBarVisibility="Visible" AutoGenerateColumns="False" Height="113" Background="White" VerticalAlignment="Top" CanUserResizeColumns="False" CanUserReorderColumns="False" HeadersVisibility="None" RowDetailsVisibilityMode="Visible" CanUserResizeRows="False" IsReadOnly="True" Width="205" SelectionChanged="dgSubCat_SelectionChanged" HorizontalAlignment="Left" >
                    <DataGrid.Resources>
                        <SolidColorBrush x:Key="{x:Static SystemColors.InactiveSelectionHighlightBrushKey}" Color="DarkGray"/>
                    </DataGrid.Resources>
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Name" Width="185" Binding="{Binding Name}"/>
                    </DataGrid.Columns>
                </DataGrid>
                <DataGrid x:Name="dgItem" Margin="437,187,0,0" HorizontalGridLinesBrush="#FFF0F0F0" VerticalGridLinesBrush="#FFF0F0F0" SelectionMode="Single" CanUserSortColumns="False" ScrollViewer.CanContentScroll="True" ScrollViewer.HorizontalScrollBarVisibility="Visible" AutoGenerateColumns="False" Height="113" Background="White" VerticalAlignment="Top" CanUserResizeColumns="False" CanUserReorderColumns="False" HeadersVisibility="None" RowDetailsVisibilityMode="Visible" CanUserResizeRows="False" IsReadOnly="True" Width="205" HorizontalAlignment="Left" >
                    <DataGrid.Resources>
                        <SolidColorBrush x:Key="{x:Static SystemColors.InactiveSelectionHighlightBrushKey}" Color="DarkGray"/>
                    </DataGrid.Resources>
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="Name" Width="185" Binding="{Binding Name}"/>
                    </DataGrid.Columns>
                </DataGrid>
                <Button x:Name="btnOps" HorizontalAlignment="Left" Height="41" Margin="173,111,0,0" VerticalAlignment="Top" Width="131" FontWeight="Bold" Click="btnOps_Click" >
