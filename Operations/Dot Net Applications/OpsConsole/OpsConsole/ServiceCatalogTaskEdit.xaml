                <TextBlock x:Name="lblTitle_Copy" HorizontalAlignment="Left" Margin="667,0,0,0" TextWrapping="Wrap" Text="Fields" VerticalAlignment="Top" Width="428" Foreground="White" FontSize="24"/>
            </Grid>
            <Grid x:Name="gridBottomToolbar" Opacity="1" Height="53" Margin="0" VerticalAlignment="Bottom" Background="#FF82879C" >
                <Button x:Name="btnSave" Content="Save" HorizontalAlignment="Right" Height="41" Margin="0,5,10,0" VerticalAlignment="Top" Width="71" FontWeight="Bold" Click="btnSave_Click"/>
                <Button x:Name="btnCancel" Content="Cancel" HorizontalAlignment="Right" Height="41" Margin="0,5,87,0" VerticalAlignment="Top" Width="71" Click="btnCancel_Click"/>
                <TextBlock x:Name="txtMessage" HorizontalAlignment="Left" Margin="7,-3,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="453" Foreground="White" FontSize="14" Height="55"/>
                <Button x:Name="btnShowHideFields"  HorizontalAlignment="Right" Height="41" Margin="0,5,164,0" VerticalAlignment="Top" Width="71" Foreground="#FF0B1F04" Click="btnShowHideFields_Click" >
